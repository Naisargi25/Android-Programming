<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="androiddatabase.loginregister">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Task3LayoutActivity"
            android:exported="false"
            android:theme="@style/Layout2"/>
        <activity
            android:name=".Task2LinearLayout"
            android:exported="false"
            android:theme="@style/Layout1"/>
        <activity
            android:name="com.androiddatabase.loginregister.activities.LoginActivity"
            android:exported="true"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.androiddatabase.loginregister.activities.RegisterActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.androiddatabase.loginregister.activities.UsersListActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>